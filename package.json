{
  "name": "typescript-ai-chatbot-backend-starter",
  "author": "Daniele Rubetti",
  "description": "An example AI chatbot backend project made with TypeScript and LangChain.",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "github:drubetti/typescript-ai-chatbot-backend-starter",
  "scripts": {
    "biome": "npm run biome:lint && npm run biome:write",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "biome:write": "biome check --write .",
    "build": "npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\"",
    "docker-build": "docker build -t typescript-ai-chatbot-backend-starter .",
    "docker-build-dev": "docker build -t typescript-ai-chatbot-backend-starter-dev -f dev.Dockerfile .",
    "docker-start": "docker-compose -f docker-compose.yml up -d",
    "docker-start-dev": "docker run --rm -it -p 3000:3000 -v $(pwd):/app typescript-ai-chatbot-backend-starter-dev npx babel-node -x \".ts\" src",
    "docker-watch": "docker run --rm -it -p 3000:3000 -v $(pwd):/app typescript-ai-chatbot-backend-starter-dev pm2-dev pm2-dev.config.js",
    "embed:documents": "babel-node -x \".ts\" scripts/embedDocuments",
    "jest": "jest --runInBand --silent --bail --verbose --expand --passWithNoTests src",
    "prepare": "node .husky/install.mjs",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "start": "babel-node -x \".ts\" src",
    "test": "npm run type-check && npm run jest",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/core": "^7.26.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@biomejs/biome": "^1.9.4",
    "@tsconfig/node22": "^22.0.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/death": "^1.1.5",
    "@types/express": "^5.0.1",
    "@types/hapi__joi": "^17.1.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-source-map-support": "^2.2.0",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "supertest": "^7.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.0",
    "@langchain/community": "^0.3.39",
    "@langchain/core": "^0.3.43",
    "@langchain/langgraph": "^0.2.63",
    "@langchain/langgraph-checkpoint-postgres": "^0.0.4",
    "@langchain/ollama": "^0.2.0",
    "@langchain/redis": "^0.1.1",
    "@langchain/textsplitters": "^0.1.0",
    "axios": "^1.8.4",
    "body-parser": "^2.2.0",
    "celebrate": "^15.0.3",
    "cheerio": "^1.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "cron": "^4.1.4",
    "death": "^1.1.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "moment": "^2.30.1",
    "mongodb": "^6.15.0",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.7.0",
    "source-map-support": "^0.5.21",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "jest": {
    "setupFiles": [
      "./src/utils/env.ts"
    ],
    "testEnvironment": "node"
  }
}
